@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Usuarios</h2>
</div>

<div style=" margin: 15px 0px;">
    <a href="@Url.Action("Form","Usuario")" class="btn btn-primary">Agregar</a>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Edad</th>
            <th>Email</th>
            <th style="text-align: center;">Editar</th>
            <th style="text-align: center;">Borrar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Usuario usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.ApellidoPaterno</td>
                <td>@usuario.ApellidoMaterno</td>
                <td>@usuario.Edad</td>
                <td>@usuario.Email</td>
                <td style="text-align: center;"><a href="@Url.Action("Form", "Usuario" , new { IdUsuario = usuario.IdUsuario })" class="btn btn-warning"><i class="bi bi-pencil"></i></a></td>
                <td style="text-align: center;" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')"><a href="@Url.Action("Delete", "Usuario" , new { IdUsuario = usuario.IdUsuario })" class="btn btn-danger"><i class="bi bi-trash"></i></a></td>
            </tr>
        }
    </tbody>
</table>